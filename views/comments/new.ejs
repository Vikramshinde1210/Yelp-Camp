<%- include('../partials/header.ejs') %>
<div class="container">
<h1 class="text-center">Add new comment to <%= campground.name %></h1>

<div class="row">
    <div style="margin: 0 auto;" class="col-md-6 col-sm-3">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input type="text" name="comment[text]" id="text" class="form-control" placeholder="Enter Comment text here">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>     
            </div>
           
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
</div>


</div>
<%- include('../partials/footer.ejs') %>