<%- include('../partials/header.ejs') %>



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View Campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-large">Add new Campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular Campgrounds</h3>
        </div>
    </div>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(x){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card mb-4 shadow-sm">
                <div class="thumbnail">
                    <img class="card-img-top" src="<%= x.image %>">
                    <div class="caption">
                        <p class="card-text"><%= x.name %></p>
                    </div>
                    <p class="text-center">
                        <a href="/campgrounds/<%= x._id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        </div>
            
            
        <% })    %>

    </div>




</div>
<%- include('../partials/footer.ejs') %>