<%- include('../partials/header.ejs') %>
<div class="container">
<h1 class="text-center">Edit <%= campground.name %></h1>

<div class="row">
    <div style="margin: 0 auto;" class="col-md-6 col-sm-3">
        <form action="/campgrounds/<%= campground._id %>?method=PUT" method="POST">
            <div class="form-group">
                <input type="text" name="name" id="name" class="form-control" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input type="text" name="img" id="img" class="form-control" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input type="text" name="desc" id="desc" class="form-control" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <input type="text" name="map" id="map" class="form-control" value="<%= campground.map %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>     
            </div>
           
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
</div>


</div>
<%- include('../partials/footer.ejs') %>
